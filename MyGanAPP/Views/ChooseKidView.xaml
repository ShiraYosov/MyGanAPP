<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyGanAPP.Views.ChooseKidView">
  <ContentView.Content>
      <StackLayout>

            <CollectionView ItemsSource="{Binding ChildrenList}" x:Name="collec">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                       

                            <Grid Padding="10" HorizontalOptions="FillAndExpand">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />

                                </Grid.ColumnDefinitions>
                            <ImageButton Source="{Binding}"/>
                            
                                <!--<Button x:Name="Question" Text="{Binding QText}" Padding="0" Clicked="Question_Clicked" Grid.Column="0" Grid.Row="0" CommandParameter="{Binding}" />-->

                            </Grid>

                       
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
  </ContentView.Content>
</ContentView>